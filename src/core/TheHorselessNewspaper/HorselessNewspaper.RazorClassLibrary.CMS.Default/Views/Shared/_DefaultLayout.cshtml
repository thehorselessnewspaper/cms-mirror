    <script src="~/_content/HorselessNewspaper.RazorClassLibrary.CMS.Default/js/horseless-elements/polyfills.js" type="module"></script>
    <script src="~/_content/HorselessNewspaper.RazorClassLibrary.CMS.Default/js/horseless-elements/main.js" type="module"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/grapesjs/0.12.17/grapes.min.js" asp-append-version="true"></script>
