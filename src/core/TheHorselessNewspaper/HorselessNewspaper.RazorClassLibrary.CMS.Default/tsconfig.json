{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "ES2021",
    "outDir": "wwwroot/js/typescript"
  },

  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot/js/typescript"
  ]
}
